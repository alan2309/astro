---
interface Props {
  icon: string;
  title: string;
  button?: string;
  link?: string;
}

const { icon,title, button,link } = Astro.props;
---

 <div class="min-h-1  bg-white justify-between">
        <!-- Header -->
 <div class="border border-gray-300 rounded-lg shadow-sm p-6">
        <div class="flex items-center mb-4">
          <img src={icon} class="h-12"  alt="" />
          <h2 class="text-2xl font-medium">{title}</h2>
        </div>
        <!-- Button -->
        {button && (
          <a 
            href={link || "#"}
            class="mt-2 inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition"
          >
            {button}
          </a></div>
        )}
      </div>